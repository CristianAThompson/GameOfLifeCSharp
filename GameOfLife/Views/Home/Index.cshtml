@using GameOfLife.Models
@model Cell[,]
@{
    ViewBag.Title = "Home Page";
}

<table>
    @for (int row = 0; row < Model.GetLength(0); row++)
    {
        <tr>
            @for (int column = 0; column < Model.GetLength(1); column++)
            {
                if (Model[row, column].state)
                {
                    <td style="height: 40px; width: 40px; background: green; display: inline-block; margin: 2px;">@Model[row, column].state</td>
                }
                else
                {
                    <td style="height: 40px; width: 40px; background: red; display: inline-block; margin: 2px;">@Model[row, column].state</td>
                }
            }
        </tr>
    }
</table>
